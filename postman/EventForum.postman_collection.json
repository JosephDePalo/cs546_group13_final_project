{
  "info": {
    "name": "Event Forum API",
    "_postman_id": "event-forum-collection-id",
    "description": "Postman collection for Event Forum backend (with auto JWT extraction)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User - Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"testuser\",\n  \"password\": \"pass123\"\n}"
        },
        "url": {
          "raw": "{{API_URL}}/api/v1/users/register",
          "host": ["{{API_URL}}"],
          "path": ["api", "v1", "users", "register"]
        }
      }
    },
    {
      "name": "User - Login (Auto Save Token)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Extract JWT token from response",
              "const res = pm.response.json();",
              "",
              "if (res && res.token) {",
              "    pm.environment.set('TOKEN', res.token);",
              "    console.log('TOKEN saved:', res.token);",
              "} else {",
              "    console.warn('No token found in response');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"testuser\",\n  \"password\": \"pass123\"\n}"
        },
        "url": {
          "raw": "{{API_URL}}/api/v1/users/login",
          "host": ["{{API_URL}}"],
          "path": ["api", "v1", "users", "login"]
        }
      }
    },
    {
      "name": "User - Get Profile (Protected)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "{{TOKEN}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{API_URL}}/api/v1/users/profile",
          "host": ["{{API_URL}}"],
          "path": ["api", "v1", "users", "profile"]
        }
      }
    }
  ]
}
