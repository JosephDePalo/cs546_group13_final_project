<h1>New Event</h1>

<form id="overview-edit-form" name="overview-edit-form" action="/api/v1/events" method="POST">

  <h2>Overview</h2>

  <div class="form-item">
    <label for="title">Title</label>
    <input type="text" id="title" name="title">
  </div>

  <div class="form-item">
    <label for="Description">Description</label>
    <textarea rows="5" cols="50" id="description" name="description">{{description}}</textarea>
  </div>

  <div class="form-item">
    <label for="start_time">Start Time</label>
    <input type="datetime-local" id="start_time" name="start_time">
  </div>

  <div class="form-item">
    <label for="end_time">End Time</label>
    <input type="datetime-local" id="end_time" name="end_time">
  </div>

  <div class="form-item">
    <label for="max_capacity">Max Capacity</label>
    <input type="number" id="max_capacity" name="max_capacity">
  </div>

  <h2>Other</h2>

  <div class="form-item">
    <label for="address">Address</label>
    <input type="text" id="address" name="address">
  </div>

  <div class="form-item">
    <label for="city">City</label>
    <input type="text" id="city" name="city">
  </div>

  <div class="form-item">
    <label for="state">State</label>
    <input type="text" id="state" name="state">
  </div>

  <div class="form-item">
    <label for="location_url">Location URL</label>
    <input type="text" id="location_url" name="location_url">
  </div>
  <div class="form-item">
    <button type="submit" id="submit_button" name="submit_button">Create Event</button>
  </div>
</form>

<a href="/api/v1/events" class="btn btn-primary">Return to Feed</a>
