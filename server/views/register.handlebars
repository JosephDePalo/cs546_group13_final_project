<h1>Register</h1>

<form id="signup-form" name="signup-form" action="/api/v1/users/register" method="POST">
  <div class="form-item">
    <label for="username">Username</label>
    <input type="text" id="username" name="username">
  </div>

  <div class="form-item">
    <label for="email">Email</label>
    <input type="text" id="email" name="email">
  </div>

  <div class="form-item">
    <label for="password">Password</label>
    <input type="password" id="password" name="password">
  </div>

  <div class="form-item">
    <label for="confirm_password">Confirm Password</label>
    <input type="password" id="confirm_password" name="confirm_password">
  </div>

  <div class="form-item">
    <label for="is_admin">Admin</label>
    <input type="checkbox" id="is_admin" name="is_admin">
  </div>

  <div class="form-item">
    <button type="submit" id="submit_button" name="submit_button">Sign Up</button>
  </div>

  <div class="links">
    <a href="/login">Already have an account? Click here to sign-in</a>
    <a href="/">Home Page</a>
  </div>
</form>
